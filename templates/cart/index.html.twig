{% extends 'base.html.twig' %}

{% block title %}Add Cart{% endblock %}

{% block body %}
<div class="container">
<div class="col-sm-10">
<div class="card m-4">
{{ form_start(form) }}
<div class="card-body">
{{ form_widget(form.quantity) }}
</div>
<div class="card-footer">
{{ form_widget(form.AddToCart) }}
</div>
{{ form_end(form) }}
</div>
</div>
</div>
{% endblock %}
